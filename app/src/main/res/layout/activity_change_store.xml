<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".controllers.ChangeStoreActivity"
    android:background="@drawable/button_shape_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/titleStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="@string/change_store" />
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:id="@+id/labelAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/address_label"
                android:textColor="@color/first_red"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/addressStore"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:autofillHints="Rua de Cima"
                android:background="@drawable/box_shape"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="end"
                android:hint="@string/no_content"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
        </TableRow>

        <TableRow
            android:id="@+id/thirdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start">

            <TextView
                android:id="@+id/labelCouncil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginStart="5dp"
                android:text="@string/council_label"
                android:textColor="@color/first_red"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/councilStore"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:autofillHints="Vila Nova de Gaia"
                android:background="@drawable/box_shape"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="end"
                android:hint="@string/no_content"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </TableRow>

        <TableRow
            android:id="@+id/fourthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start">

            <TextView
                android:id="@+id/labelZipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginStart="5dp"
                android:text="@string/zip_code_label"
                android:textColor="@color/first_red"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/zipCodeStore"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:autofillHints="1234-123"
                android:background="@drawable/box_shape"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="end"
                android:hint="@string/no_content"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </TableRow>

        <TableRow
            android:id="@+id/fifthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start">

            <TextView
                android:id="@+id/labelContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginStart="5dp"
                android:text="@string/contact_label"
                android:textColor="@color/first_red"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/contactStore"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:autofillHints="911231212"
                android:background="@drawable/box_shape"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="end"
                android:hint="@string/no_content"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </TableRow>

        <TableRow
            android:id="@+id/sixthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start">

            <TextView
                android:id="@+id/labelCashReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginStart="5dp"
                android:text="@string/number_cash_register_label"
                android:textColor="@color/first_red"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cashRegisterStore"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:autofillHints="5"
                android:background="@drawable/box_shape"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="end"
                android:hint="@string/no_content"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </TableRow>

        <TableRow
            android:id="@+id/seventhRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start">

            <TextView
                android:id="@+id/labelStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginStart="5dp"
                android:text="@string/status_label"
                android:textColor="@color/first_red"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/statusStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_shape_light"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </TableRow>
    </TableLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/button_shape"
        android:text="@string/confirm"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/background_color" />

</LinearLayout>